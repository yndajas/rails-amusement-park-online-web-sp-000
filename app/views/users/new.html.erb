<%= form_for @user do |f| %>
    <%= f.label 'Name' %>
    <%= f.text_field :name %>
    <%= f.label 'Height' %>
    <%= f.number_field :height %>
    <%= f.label 'Happiness' %>
    <%= f.number_field :happiness %>
    <%= f.label 'Nausea' %>
    <%= f.number_field :nausea %>
    <%= f.label 'Tickets' %>
    <%= f.number_field :tickets %>
    <%= f.label 'Admin' %>
    <%= f.check_box :admin %>
    <%= f.label 'Password' %>
    <%= f.password_field :password %>
    <%= f.submit "Create User" %>
<% end %>